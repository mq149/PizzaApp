<Page x:Class="PizzaApp.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PizzaApp"
      mc:Ignorable="d" 
      d:DesignHeight="532" d:DesignWidth="990"
      Title="MenuPage" Width="990" Height="532">
    <Grid HorizontalAlignment="Center" Height="532" VerticalAlignment="Center" Width="990">
        <StackPanel HorizontalAlignment="Left" Height="350" Margin="50,0,0,0" VerticalAlignment="Center" Width="250">
