            <Label HorizontalContentAlignment="Center" Content="Tên bánh pizza" Height="36" FontSize="20" FontFamily="Segoe UI Semibold"/>
            <Label HorizontalContentAlignment="Center" Content="Mô tả pizza" FontFamily="Segoe UI Light" Height="44"/>
            <StackPanel Height="56" Orientation="Horizontal">
                <StackPanel Width="120">
                    <Label Content="Chọn cỡ bánh"/>
                    <ComboBox BorderBrush="#00ACACAC" SelectedIndex="0">
                        <ComboBoxItem x:Name="cbip11" Content="Cỡ vừa 9-inch"/>
                        <ComboBoxItem x:Name="cbip12" Content="Cỡ lớn 12-inch"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Width="120" Margin="10,0,0,0">
                    <Label Content="Chọn đế bánh"/>
                    <ComboBox BorderBrush="#00ACACAC" SelectedIndex="0">
                        <ComboBoxItem x:Name="cbip14" Content="Đế mỏng"/>
                        <ComboBoxItem x:Name="cbip15" Content="Đế vừa"/>
                        <ComboBoxItem x:Name="cbip16" Content="Đế dày"/>
                    </ComboBox>
                </StackPanel>

        </StackPanel>
            <Button Content="Thêm vào giỏ hàng" Margin="36,2,33,0" Height="45" Background="#FF8D0101" BorderBrush="#00707070" Foreground="White" Width="180" FontSize="16"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Height="350" Margin="0" VerticalAlignment="Center" Width="250">
            <Image Source="/PizzaApp;component/Images/pizza_transparent.png" Height="155"/>
            <Label HorizontalContentAlignment="Center" Content="Tên bánh pizza" Height="36" FontSize="20" FontFamily="Segoe UI Semibold"/>
